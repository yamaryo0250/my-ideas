<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <h2 class="page-heading">新規アイデア登録</h2>

      <%= form_with url: ideas_path, local: true do |f|%>
        <div class="field">
          <%= f.label :name, "カテゴリー" %><br />
          <%= f.text_field :name, id:"idea_category" %>
        </div>
        <div class="field">
          <%= f.label :body, "本文" %><br />
          <%= f.text_area :body, class: :form__text, id:"idea_body" %>
        </div>
        <div class="actions">
          <%= f.submit "保存する", class: :form__btn  %>
        </div>
      <% end %>

    </div>
  </div>
</div>